<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/qrStatusText"
            android:layout_width="216dp"
            android:layout_height="40dp"
            android:text="encrypted and encoded message" />

        <ImageView
            android:id="@+id/imageCode"
            android:layout_width="match_parent"
            android:layout_height="324dp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/previousqr_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="previous QR-Code" />

            <Button
                android:id="@+id/nextqr_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="next QR Code" />
        </LinearLayout>

        <Button
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLOSE CODE AND MESSAGE" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>




